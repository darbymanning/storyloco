{
	"name": "storyloco",
	"version": "0.0.0",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts"
		},
		"./mux": {
			"types": "./packages/mux/src/app.svelte",
			"import": "./packages/mux/src/app.svelte"
		},
		"./heading": {
			"types": "./packages/heading/src/app.svelte",
			"import": "./packages/heading/src/app.svelte"
		}
	},
	"devDependencies": {
		"@types/node": "24.0.0",
		"@typescript-eslint/eslint-plugin": "8.34.0",
		"@typescript-eslint/parser": "8.34.0",
		"eslint": "9.28.0",
		"eslint-plugin-prettier": "5.4.1",
		"kitto": "1.0.0-rc.12",
		"prettier": "3.5.3",
		"typescript": "5.8.3",
		"vite": "6.3.5"
	},
	"scripts": {
		"add-plugin": "npx @storyblok/field-plugin-cli@latest add --dir \"./packages\" --structure monorepo",
		"lint": "eslint --ext .js .",
		"format": "prettier . --write"
	},
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"dependencies": {
		"color": "5.0.0"
	}
}
